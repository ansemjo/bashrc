[color]
	ui = auto

[format]
	pretty = infoline

[pretty]
	infoline = format:%C(auto,magenta)%cd %C(auto,green)%h %C(auto,blue)%G? %C(auto)%s%d %C(auto,dim)[%cN%C(auto,blue)% GK%C(auto,reset)%C(auto,dim)]%C(auto)

[log]
  decorate = auto
  date = short-local

[alias]

  chunk = add --patch
  sign  = commit --amend --gpg-sign
  graph = log --graph --all
  ls = log --stat
  ll = log -n 10
  st = status --short
  co = checkout
  cm = commit
  br = branch --verbose
  re = remote --verbose

[push]
	default = simple
	followTags = true

[commit]
  gpgSign = false
