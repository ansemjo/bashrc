[push]
	default = simple
	followTags = true

[format]
	pretty = infoline

[pretty]
	infoline = format:%C(auto,magenta)%cd %C(auto,green)%h %C(auto,blue)%G? %C(auto)%s%d %C(auto,dim)[%cN%C(auto,blue)% GK%C(auto,reset)%C(auto,dim)]%C(auto)

[log]
  decorate = auto
  date = short-local

[alias]
	graph = log --graph --all
	summary = log --summary
  st = status
  co = checkout
  br = branch --verbose
  l = log -n 5
  d = diff

[color]
	ui = auto
